<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud"
    tools:context=".CustomPunchIn">

    <TextView
        android:id="@+id/Edittingshifttext"
        android:layout_width="212dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:text="Adding Shift"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/PunchInDateCustomPunchIn"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/buttonsbackground"
        android:backgroundTint="@color/accent_dark"
        android:text="date"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="162dp" />

    <Button
        android:id="@+id/PunchInTimeCustomPunchIn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/buttonsbackground"
        android:backgroundTint="@color/accent_dark"
        android:text="time"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/PunchInDateCustomPunchIn"
        app:layout_constraintTop_toTopOf="@+id/PunchInDateCustomPunchIn" />

    <Button
        android:id="@+id/PunchOutDateCustomPunchIn"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/buttonsbackground"
        android:backgroundTint="@color/accent_dark"
        android:text="date"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/PunchInDateCustomPunchIn"
        tools:layout_editor_absoluteX="30dp" />

    <Button
        android:id="@+id/PunchOutTimeCustomPunchIn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="103dp"
        android:background="@drawable/buttonsbackground"
        android:backgroundTint="@color/accent_dark"
        android:text="time"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/PunchInTimeCustomPunchIn"
        app:layout_constraintTop_toBottomOf="@+id/PunchInTimeCustomPunchIn" />

    <Button
        android:id="@+id/SaveCustomPunchIn"
        android:layout_width="190dp"
        android:layout_height="58dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/buttonsbackground"
        android:backgroundTint="@color/accent"
        android:text="Save"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="653dp" />

    <Button
        android:id="@+id/CancelCustomPunchIn"
        android:layout_width="190dp"
        android:layout_height="57dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/buttonsbackground"
        android:backgroundTint="#F89595"
        android:text="Cancel"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/SaveCustomPunchIn"
        app:layout_constraintTop_toTopOf="@+id/SaveCustomPunchIn" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="Select starting time:"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="114dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Select ending time:"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="250dp" />
</androidx.constraintlayout.widget.ConstraintLayout>