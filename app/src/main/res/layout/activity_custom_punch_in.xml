<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud"
    tools:context=".CustomPunchIn">

    <ImageView
        android:id="@+id/BackgroundCustomPunchIn"
        android:layout_width="408dp"
        android:layout_height="654dp"
        android:background="@drawable/backfortabs"
        android:backgroundTint="#8BFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/TextCustomPunchIn"
        android:layout_width="212dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttonsbackground"
        android:backgroundTint="#5BFFFFFF"
        android:text="Adding Shift"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/PunchInDateCustomPunchIn"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/buttonsbackground"
        android:text="date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BackgroundCustomPunchIn" />

    <Button
        android:id="@+id/PunchInTimeCustomPunchIn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/buttonsbackground"
        android:text="time"
        app:layout_constraintStart_toEndOf="@+id/PunchInDateCustomPunchIn"
        app:layout_constraintTop_toTopOf="@+id/PunchInDateCustomPunchIn" />

    <Button
        android:id="@+id/PunchOutDateCustomPunchIn"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="244dp"
        android:background="@drawable/buttonsbackground"
        android:text="date"
        app:layout_constraintEnd_toEndOf="@+id/BackgroundCustomPunchIn"
        app:layout_constraintTop_toBottomOf="@+id/PunchInDateCustomPunchIn" />

    <Button
        android:id="@+id/PunchOutTimeCustomPunchIn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="103dp"
        android:background="@drawable/buttonsbackground"
        android:text="time"
        app:layout_constraintStart_toStartOf="@+id/PunchInTimeCustomPunchIn"
        app:layout_constraintTop_toBottomOf="@+id/PunchInTimeCustomPunchIn" />

    <Button
        android:id="@+id/SaveCustomPunchIn"
        android:layout_width="190dp"
        android:layout_height="58dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="576dp"
        android:background="@drawable/buttonsbackground"
        android:backgroundTint="#A3F38F"
        android:text="Save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BackgroundCustomPunchIn" />

    <Button
        android:id="@+id/CancelCustomPunchIn"
        android:layout_width="190dp"
        android:layout_height="57dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/buttonsbackground"
        android:backgroundTint="#F89595"
        android:text="Cancel"
        app:layout_constraintStart_toEndOf="@+id/SaveCustomPunchIn"
        app:layout_constraintTop_toTopOf="@+id/SaveCustomPunchIn" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:text="Select starting time:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BackgroundCustomPunchIn" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="172dp"
        android:text="Select ending time:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BackgroundCustomPunchIn" />
</androidx.constraintlayout.widget.ConstraintLayout>